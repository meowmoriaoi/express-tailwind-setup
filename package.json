{
  "name": "express-tailwind-setup",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:css": "postcss public/tailwind.css -o public/style.css -w",
    "build:css": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/style.css",
    "dev": "concurrently \"nodemon index\" \"npm run watch:css\"",
    "build": "npm run build:css && node index"
  },
