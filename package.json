  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.10",
    "nodemon": "^2.0.15",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "pug": "^3.0.2",
    "tailwindcss": "^2.2.19"
  }
}
